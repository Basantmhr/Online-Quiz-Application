<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design_night"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/welcomeUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittextdrawable"
        android:gravity="center"
        android:hint="@string/userMail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/welcomePassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextdrawable"
        android:gravity="center"
        android:hint="@string/userPassword"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeUser" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signIn"
        android:background="@drawable/edittextdrawable"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/signIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomePassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:background="@drawable/edittextdrawable"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/signUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signIn" />
</androidx.constraintlayout.widget.ConstraintLayout>